#!/bin/sh

qhmc="../../main/qhmc"
hmc="../../hmc"
t="test.out"

tau=1.0
rho=0.25
nx=4
nt=8
nf=6
nfsteps=10
ngsteps=10
lattice='startconf'

#$qhmc $hmc/wilson.lua
#$qhmc -e "ngsteps=60;nfsteps={20}" $hmc/wilson.lua
#$qhmc -e "ngsteps=150;nfsteps={50}" $hmc/wilson.lua
mpirun -np 2 $qhmc -e "warmup=50;nf=$nf;nx=$nx;nt=$nt;tau=$tau;beta=4;mass=-0.161;ngsteps=$ngsteps;nfsteps={$nfsteps};ntraj=100;rho=$rho" \
	$hmc/main_wilson.lua | tee nf${nf}_nx${nx}nt${nt}_ns${nsteps}_rho$rho.out
